#!/bin/bash

# Disable intercom service
echo "Disabling NDI Bridge Intercom Service..."

# Check if service exists
if ! systemctl list-unit-files 2>/dev/null | grep -q ndi-bridge-intercom; then
    echo "Error: Intercom service not installed"
    exit 1
fi

# Stop the service if running
if systemctl is-active --quiet ndi-bridge-intercom; then
    echo "Stopping intercom service..."
    systemctl stop ndi-bridge-intercom
fi

# Disable the service
systemctl disable ndi-bridge-intercom

echo "âœ“ Intercom service disabled"