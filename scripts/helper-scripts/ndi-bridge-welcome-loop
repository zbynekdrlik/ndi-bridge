#!/bin/bash
# Auto-refreshing welcome screen with quick actions

while true; do
    /usr/local/bin/ndi-bridge-welcome
    # Wait for key press or timeout after 5 seconds
    read -t 5 -n 1 -s -r -p "" key
    if [[ $? -eq 0 ]]; then
        # Handle quick actions
        case "${key,,}" in  # Convert to lowercase
            l)
                clear
                echo "=== NDI Bridge Logs (Recent 100 lines) ==="
                echo ""
                journalctl -u ndi-bridge -n 100 --no-pager | less
                echo ""
                echo "Press any key to return to dashboard..."
                read -n 1 -s -r
                ;;
            s)
                clear
                echo "=== Set NDI Stream Name ==="
                echo "Current name: $(cat /etc/ndi-bridge/config 2>/dev/null | grep NDI_NAME | cut -d'=' -f2 | tr -d '"' || echo 'Not set')"
                echo ""
                read -p "Enter new NDI name: " new_name
                if [ -n "$new_name" ]; then
                    /usr/local/bin/ndi-bridge-set-name "$new_name"
                    echo "Name updated. Restarting service..."
                    systemctl restart ndi-bridge
                    sleep 2
                fi
                ;;
            n)
                clear
                echo "=== Network Status ==="
                echo ""
                ip addr show br0
                echo ""
                echo "Bridge members:"
                bridge link show
                echo ""
                echo "Press any key to continue..."
                read -n 1 -s -r
                ;;
            t)
                clear
                echo "=== Time Synchronization Status ==="
                echo ""
                if systemctl is-active ptp4l >/dev/null 2>&1; then
                    echo "PTP Status:"
                    journalctl -u ptp4l -n 20 --no-pager
                fi
                echo ""
                if systemctl is-active chrony >/dev/null 2>&1; then
                    echo "NTP Status:"
                    chronyc tracking
                fi
                echo ""
                echo "Press any key to continue..."
                read -n 1 -s -r
                ;;
            h)
                clear
                echo "=== NDI Bridge Help ==="
                echo ""
                echo "Quick Actions:"
                echo "  L - View NDI Bridge logs"
                echo "  S - Set NDI stream name"
                echo "  N - Network status details"
                echo "  T - Time synchronization status"
                echo "  H - This help menu"
                echo "  Q - Exit to shell"
                echo ""
                echo "Helper Commands:"
                echo "  ndi-bridge-info     - System information"
                echo "  ndi-bridge-logs     - View service logs"
                echo "  ndi-bridge-set-name - Change NDI name"
                echo "  ndi-bridge-rw       - Mount filesystem read-write"
                echo "  ndi-bridge-ro       - Return to read-only"
                echo ""
                echo "Press any key to continue..."
                read -n 1 -s -r
                ;;
            q)
                clear
                echo "Type 'ndi-bridge-welcome-loop' to return to dashboard"
                echo ""
                break
                ;;
            *)
                # Any other key, just refresh
                ;;
        esac
    fi
    # No key pressed or after action, loop continues
done