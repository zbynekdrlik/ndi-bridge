#!/bin/bash

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "NDI Bridge Intercom Status"
echo "========================="
echo ""

# Check if service exists
if ! systemctl list-unit-files 2>/dev/null | grep -q ndi-bridge-intercom; then
    echo -e "${RED}Service not installed${NC}"
    exit 1
fi

# Check service status
if systemctl is-active --quiet ndi-bridge-intercom; then
    echo -e "Service: ${GREEN}● Running${NC}"
else
    if systemctl is-failed --quiet ndi-bridge-intercom; then
        echo -e "Service: ${RED}● Failed${NC}"
    else
        echo -e "Service: ${YELLOW}● Stopped${NC}"
    fi
fi

# Show configuration
if [ -f /etc/ndi-bridge/intercom.conf ]; then
    source /etc/ndi-bridge/intercom.conf
    echo ""
    echo "Configuration:"
    echo "  Room:    ${VDO_ROOM:-nl_interkom}"
    echo "  Server:  ${VDO_SERVER:-https://vdo.ninja/alpha/}"
    echo "  Device:  ${AUDIO_DEVICE:-default}"
    echo "  Enabled: ${INTERCOM_ENABLED:-true}"
fi

# Check chromium process
echo ""
echo "Process Status:"
INTERCOM_PID=$(pgrep -f "vdo.ninja.*interkom" 2>/dev/null | head -1)
if [ -z "$INTERCOM_PID" ]; then
    INTERCOM_PID=$(pgrep -f "chromium.*intercom" 2>/dev/null | head -1)
fi

if [ -n "$INTERCOM_PID" ]; then
    echo -e "  Chromium: ${GREEN}Running${NC} (PID: $INTERCOM_PID)"
    
    # Show memory usage
    MEM_KB=$(ps -o rss= -p $INTERCOM_PID 2>/dev/null | tr -d ' ')
    if [ -n "$MEM_KB" ]; then
        MEM_MB=$((MEM_KB / 1024))
        echo "  Memory:   ${MEM_MB}MB"
    fi
    
    # Show CPU usage
    CPU=$(ps -o %cpu= -p $INTERCOM_PID 2>/dev/null | tr -d ' ')
    if [ -n "$CPU" ]; then
        echo "  CPU:      ${CPU}%"
    fi
else
    echo -e "  Chromium: ${RED}Not running${NC}"
fi

# Show recent logs
echo ""
echo "Recent Logs:"
journalctl -u ndi-bridge-intercom -n 5 --no-pager 2>/dev/null | tail -5

echo ""
echo "Use 'ndi-bridge-intercom-logs' to see full logs"