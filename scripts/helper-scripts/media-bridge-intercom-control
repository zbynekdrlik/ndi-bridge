#!/bin/bash
# Media Bridge Intercom Audio Control Script
# Controls audio settings for VDO.Ninja intercom

set -e

# PipeWire/PulseAudio environment - use mediabridge user
export XDG_RUNTIME_DIR=/run/user/999
export PULSE_RUNTIME_PATH=/run/user/999/pulse

# Suppress PulseAudio cookie warnings
export PULSE_COOKIE=/tmp/.pulse-cookie

# Function to get USB audio devices - FIXED to CSCTEK USB HID
get_usb_audio_devices() {
    # Look for USB Audio devices - multiple possible names
    # The device may appear as "CSCTEK_USB_Audio_and_HID" or "USB_Audio_and_HID" or just "USB_Audio"
    # Try intercom virtual devices first, then fall back to any USB audio device
    
    # First try virtual devices (these should be preferred)
    local usb_sink=$(sudo -u mediabridge pactl list sinks short 2>&1 | grep "intercom-speaker" | grep -v monitor | awk '{print $2}' | head -1)
    local usb_source=$(sudo -u mediabridge pactl list sources short 2>&1 | grep "intercom-microphone" | grep -v monitor | awk '{print $2}' | head -1)
    
    # If no virtual devices, try USB audio devices with various patterns
    if [ -z "$usb_sink" ]; then
        usb_sink=$(sudo -u mediabridge pactl list sinks short 2>&1 | grep -E "CSCTEK|USB.*Audio|USB.*HID" | grep -v monitor | awk '{print $2}' | head -1)
    fi
    
    if [ -z "$usb_source" ]; then
        usb_source=$(sudo -u mediabridge pactl list sources short 2>&1 | grep -E "CSCTEK|USB.*Audio|USB.*HID" | grep -v monitor | awk '{print $2}' | head -1)
    fi
    
    # If still no devices, check if audio manager needs to load them
    if [ -z "$usb_sink" ] && [ -z "$usb_source" ]; then
        # Try to trigger audio manager to load devices
        systemctl restart media-bridge-audio-manager 2>/dev/null || true
        sleep 2
        
        # Try again after restart
        usb_sink=$(sudo -u mediabridge pactl list sinks short 2>&1 | grep -E "intercom-speaker|CSCTEK|USB.*Audio" | grep -v monitor | awk '{print $2}' | head -1)
        usb_source=$(sudo -u mediabridge pactl list sources short 2>&1 | grep -E "intercom-microphone|CSCTEK|USB.*Audio" | grep -v monitor | awk '{print $2}' | head -1)
    fi
    
    # Report errors only if still not found
    if [ -z "$usb_sink" ]; then
        echo "ERROR: No USB Audio or intercom virtual device found (output)" >&2
    fi
    
    if [ -z "$usb_source" ]; then
        echo "ERROR: No USB Audio or intercom virtual device found (input)" >&2
    fi
    
    echo "$usb_sink $usb_source"
}

# Main command processing
case "$1" in
    status)
        devices=($(get_usb_audio_devices))
        usb_sink="${devices[0]}"
        usb_source="${devices[1]}"
        
        if [ -n "$usb_sink" ]; then
            output_vol=$(sudo -u mediabridge pactl get-sink-volume "$usb_sink" 2>/dev/null | grep -o '[0-9]*%' | head -1 | tr -d '%')
            output_muted=$(sudo -u mediabridge pactl get-sink-mute "$usb_sink" 2>/dev/null | grep -o 'yes\|no')
        else
            output_vol=50
            output_muted="no"
        fi
        
        if [ -n "$usb_source" ]; then
            input_vol=$(sudo -u mediabridge pactl get-source-volume "$usb_source" 2>/dev/null | grep -o '[0-9]*%' | head -1 | tr -d '%')
            input_muted=$(sudo -u mediabridge pactl get-source-mute "$usb_source" 2>/dev/null | grep -o 'yes\|no')
        else
            input_vol=50
            input_muted="no"
        fi
        
        cat <<EOF
{
  "output": {
    "device": "$usb_sink",
    "volume": $output_vol,
    "muted": $([ "$output_muted" = "yes" ] && echo "true" || echo "false")
  },
  "input": {
    "device": "$usb_source",
    "volume": $input_vol,
    "muted": $([ "$input_muted" = "yes" ] && echo "true" || echo "false")
  }
}
EOF
        ;;
        
    set-volume)
        if [ $# -ne 3 ]; then
            echo "Usage: $0 set-volume <output|input> <0-100>"
            exit 1
        fi
        
        devices=($(get_usb_audio_devices))
        volume=$3
        
        if [ "$2" = "output" ]; then
            device="${devices[0]}"
            [ -n "$device" ] && sudo -u mediabridge pactl set-sink-volume "$device" "${volume}%" 2>/dev/null
        elif [ "$2" = "input" ]; then
            device="${devices[1]}"
            [ -n "$device" ] && sudo -u mediabridge pactl set-source-volume "$device" "${volume}%" 2>/dev/null
        else
            echo "Invalid target: $2"
            exit 1
        fi
        
        echo "Volume set to ${volume}%"
        ;;
        
    mute)
        if [ $# -ne 2 ]; then
            echo "Usage: $0 mute <output|input|both>"
            exit 1
        fi
        
        devices=($(get_usb_audio_devices))
        
        case "$2" in
            output)
                [ -n "${devices[0]}" ] && sudo -u mediabridge pactl set-sink-mute "${devices[0]}" 1 2>/dev/null
                echo "Output muted"
                ;;
            input)
                [ -n "${devices[1]}" ] && sudo -u mediabridge pactl set-source-mute "${devices[1]}" 1 2>/dev/null
                echo "Input muted"
                ;;
            both)
                [ -n "${devices[0]}" ] && sudo -u mediabridge pactl set-sink-mute "${devices[0]}" 1 2>/dev/null
                [ -n "${devices[1]}" ] && sudo -u mediabridge pactl set-source-mute "${devices[1]}" 1 2>/dev/null
                echo "Both muted"
                ;;
            *)
                echo "Invalid target: $2"
                exit 1
                ;;
        esac
        ;;
        
    unmute)
        if [ $# -ne 2 ]; then
            echo "Usage: $0 unmute <output|input|both>"
            exit 1
        fi
        
        devices=($(get_usb_audio_devices))
        
        case "$2" in
            output)
                [ -n "${devices[0]}" ] && sudo -u mediabridge pactl set-sink-mute "${devices[0]}" 0 2>/dev/null
                echo "Output unmuted"
                ;;
            input)
                [ -n "${devices[1]}" ] && sudo -u mediabridge pactl set-source-mute "${devices[1]}" 0 2>/dev/null
                echo "Input unmuted"
                ;;
            both)
                [ -n "${devices[0]}" ] && sudo -u mediabridge pactl set-sink-mute "${devices[0]}" 0 2>/dev/null
                [ -n "${devices[1]}" ] && sudo -u mediabridge pactl set-source-mute "${devices[1]}" 0 2>/dev/null
                echo "Both unmuted"
                ;;
            *)
                echo "Invalid target: $2"
                exit 1
                ;;
        esac
        ;;
        
    toggle)
        if [ $# -ne 2 ]; then
            echo "Usage: $0 toggle <output|input|both>"
            exit 1
        fi
        
        devices=($(get_usb_audio_devices))
        
        case "$2" in
            output)
                if [ -n "${devices[0]}" ]; then
                    sudo -u mediabridge pactl set-sink-mute "${devices[0]}" toggle 2>/dev/null
                    echo "Output toggled"
                fi
                ;;
            input)
                if [ -n "${devices[1]}" ]; then
                    sudo -u mediabridge pactl set-source-mute "${devices[1]}" toggle 2>/dev/null
                    echo "Input toggled"
                fi
                ;;
            both)
                if [ -n "${devices[0]}" ]; then
                    sudo -u mediabridge pactl set-sink-mute "${devices[0]}" toggle 2>/dev/null
                fi
                if [ -n "${devices[1]}" ]; then
                    sudo -u mediabridge pactl set-source-mute "${devices[1]}" toggle 2>/dev/null
                fi
                echo "Both toggled"
                ;;
            *)
                echo "Invalid target: $2"
                exit 1
                ;;
        esac
        ;;
        
    *)
        echo "Usage: $0 {status|set-volume|mute|unmute|toggle} [args]"
        echo ""
        echo "Commands:"
        echo "  status                    - Show current audio status (JSON)"
        echo "  set-volume <out|in> <0-100> - Set volume percentage"
        echo "  mute <out|in|both>        - Mute audio"
        echo "  unmute <out|in|both>      - Unmute audio"
        echo "  toggle <out|in|both>      - Toggle mute state"
        exit 1
        ;;
esac