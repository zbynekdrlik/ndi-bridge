#!/bin/bash
# Test Configuration File
# This file contains all configuration for automated testing

# Test Box Configuration
TEST_BOX_IP="${TEST_BOX_IP:-10.77.9.143}"
TEST_BOX_USER="root"
TEST_BOX_PASS="newlevel"
TEST_BOX_SSH_OPTS="-o StrictHostKeyChecking=no -o LogLevel=ERROR -o UserKnownHostsFile=/dev/null"

# Test Parameters
TEST_CAPTURE_DEVICE="/dev/video0"
# Use the box's own NDI stream for testing (box broadcasts as "MEDIA-BRIDGE (USB Capture)")
TEST_NDI_STREAM="MEDIA-BRIDGE (USB Capture)"
TEST_NDI_STREAM_NO_AUDIO="MEDIA-BRIDGE (USB Capture)"
TEST_DISPLAY_ID="1"
TEST_TIMEOUT_BOOT="120"
TEST_TIMEOUT_SERVICE="30"
TEST_TIMEOUT_CAPTURE="10"

# Expected Values
EXPECTED_FPS="60"
EXPECTED_FPS_TOLERANCE="10"  # Allow Â±10 fps variation
EXPECTED_RESOLUTION="1920x1080"
EXPECTED_AUDIO_RATE="48000"
EXPECTED_AUDIO_CHANNELS="2"

# Build Configuration
BUILD_IMAGE_PATH="media-bridge.img"
BUILD_BINARY_PATH="build/bin"

# Test Output
TEST_LOG_DIR="tests/logs"
TEST_REPORT_FILE="tests/test_report.txt"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color